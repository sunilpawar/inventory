<?xml version="1.0"?>
<extension key="com.skvare.inventory" type="module">
  <file>inventory</file>
  <name>Inventory Management System</name>
  <description>Comprehensive inventory management system for CiviCRM supporting products, variants, warehouses, sales, shipping, and device lifecycle management.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Skvare</author>
    <email>extensions@skvare.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/Skvare/com.skvare.inventory</url>
    <url desc="Documentation">https://github.com/Skvare/com.skvare.inventory</url>
    <url desc="Support">https://github.com/Skvare/com.skvare.inventory/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2024-01-15</releaseDate>
  <version>1.0.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.69</ver>
  </compatibility>
  <comments>Inventory Management System for device tracking, sales, and fulfillment</comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Inventory</namespace>
    <format>24.02.0</format>
    <angularModule>crmInventory</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
</extension>
